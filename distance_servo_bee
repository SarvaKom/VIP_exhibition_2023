#include "Servo.h"
#include "NewPing.h"

const int ServoPin = 11;
const int TriggerPin = 3;
const int EchoPin = 2;

// 100 = maxDistance
NewPing sonar(TriggerPin, EchoPin, 100);
Servo servo;

void setup() {
  Serial.begin(9600);
  servo.attach(ServoPin);
}

void loop() {
  int cm = sonar.ping_cm();
  Serial.println(cm);

  int angle = map(cm, 2, 10, 15, 165);
  servo.write(angle);
  
  delay(60);
}
